<div class="sidebar pt-5 col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12 h-md-25">
  <div class="info-user ">
    <% if signed_in? %>
      <% if current_user.avatar.attached? %>
        <image class="profile-photo" src="<%= (url_for(current_user.avatar)) %>" style="width: 120px;">
      <% else %>
        <image class="profile-photo" src="/assets/default-photo.jpg" style="width: 120px;">
      <% end %>
      <div class="edit-user-container">
        <image class="" src="/assets/pencil.svg" style="width: 20px;">
        <%= link_to 'Edit', edit_user_path(current_user) %>
      </div>
      
      <h4 class="username"> <%= current_user.name %></h4>
      <p class="usermail"> <%= current_user.email %></p>
      <%= button_to 'Sign out', sign_out_path, method: :delete , class: 'btn sign-out' %>
    <% else %>
      <% controller.redirect_to sign_in_path %>
    <% end %>
  </div>
</div>
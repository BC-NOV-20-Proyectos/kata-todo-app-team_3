
<div class="container-main row">
  <%= render 'sidebar'%>  

  <div class="task-panel pt-10 col-xl-9 col-lg-6 col-6 col-sm-6">

    <div class="btn-container">
      <a class="btn-new-task" href="/tasks/new">
          New task
      </a>
    </div>

    <h3 class="title-tasks">Pending tasks</h3>

    <table class="task-table">
      <thead>
        <tr>
          <th class="mx-auto">
            
          </th>
          <th class="mx-auto">Name</th>
          <th class="mx-auto">Description</th>
          <th class="mx-auto">Due to</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr class=row-table>
            <td>
              <%= check_box_tag(:completed ) %>
              <%= label_tag(:completed , "") %>
            </td>
            <td><%= task.name %></td>
            <td><%= task.description %></td>
            <td><%= task.due_to %></td>
            <td>
            <image class="" src="/assets/pencil.svg" style="width: 20px;">
            <%= link_to 'Edit', edit_task_path(task)%>
            </td>
            <td>
            <image class="" src="/assets/delete.svg" style="width: 20px;">
            <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</div>

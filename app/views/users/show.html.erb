<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="row mt-4 mb-4">
        <image src="<%= (url_for(@user.avatar)) %>" style="width: 120px;">
      </div>
      <div class="row mt-4 mb-4">
        <p> <%= @user.name %> </p>
      </div>
      <div class="row mt-4 mb-4">
        <p> <%= @user.lastname %> </p>
      </div>
      <div class="row mt-4 mb-4">
        <p> <%= @user.email %> </p>
      </div>
      <div class="row mt-4 mb-4">
        <p> <%= button_to "edit user", edit_user_path(@user), method: :get %> </p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <%= button_to 'Create task', new_task_path, method: :get %>
    </div>
  </div>
</div>